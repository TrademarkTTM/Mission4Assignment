@model GradeCalculatorModel;

<div class="col">
    <!--Start of the grade calculator-->
    <form method="post">
        <h3>Grade Calculator</h3>
        <label class="form-label">Assignments:</label>
        <input id="assignmentsNum" asp-for="assignmentNum" />%<br />
        <label class="form-label">Group Projects:</label>
        <input id="gpNum" asp-for="gpNum" />%<br />
        <label class="form-label">Quizzes:</label>
        <input id="quizNum" asp-for="quizNum" />%<br />
        <label class="form-label">Midterm Exam:</label>
        <input id="midNum" asp-for="midNum" />%<br />
        <label class="form-label">Final Exam:</label>
        <input id="finalNum" asp-for="finalNum" />%<br />
        <label class="form-label">INTEX:</label>
        <input id="intexNum" asp-for="intexNum" />%<br />
        <button type="submit" id="btnSend">Submit</button><br />
        <!--<label id="finalOutput" style="display: none">Test</label>-->
    </form>
</div>
